@model Dealer.Models.Modelo

@{
    ViewData["Title"] = "Eliminar";
}


<div class="admin-actions-container">
    <h4>@ViewData["Title"]</h4>
    <h3 style="font-size:1rem;">¿Seguro que quiere eliminar?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Marca:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdMarcaNavigation.IdMarca)
        </dd>
        <dt class="col-sm-2">
            Modelo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreModelo)
        </dd>
        <dt class="col-sm-2">
            Potencia:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Potencia)
        </dd>
        <dt class="col-sm-2">
            Cilindrada:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cilindrada)
        </dd>
        <dt class="col-sm-2">
            Combustible:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combustible)
        </dd>
        <dt class="col-sm-2">
            Pasajeros:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pasajeros)
        </dd>
        <dt class="col-sm-2">
            Tracción:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Traccion)
        </dd>
        <dt class="col-sm-2">
            Precio base:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioBase)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdModelo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Regresar</a>
    </form>
</div>
