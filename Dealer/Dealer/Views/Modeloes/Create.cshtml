@model Dealer.Models.Modelo

@{
    ViewData["Title"] = "Agregar modelo";
}

<h1 class="admin-header-title">@ViewData["Title"]</h1>

<hr />
<div class="row admin-actions-container">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdMarca" class="control-label">Marca</label>
                <select asp-for="IdMarca" class ="form-control" asp-items="ViewBag.IdMarca"><option>Seleccione</option></select>
            </div>
            <div class="form-group">
                <label asp-for="NombreModelo" class="control-label">Modelo</label>
                <input asp-for="NombreModelo" class="form-control" />
                <span asp-validation-for="NombreModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Potencia" class="control-label">Potencia</label>
                <input asp-for="Potencia" class="form-control" />
                <span asp-validation-for="Potencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cilindrada" class="control-label">Cilindrada</label>
                <input asp-for="Cilindrada" class="form-control" />
                <span asp-validation-for="Cilindrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Combustible" class="control-label">Combustible</label>
                <input asp-for="Combustible" class="form-control" />
                <span asp-validation-for="Combustible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pasajeros" class="control-label">Pasajeros</label>
                <input asp-for="Pasajeros" class="form-control" />
                <span asp-validation-for="Pasajeros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traccion" class="control-label">Tracción</label>
                <input asp-for="Traccion" class="form-control" />
                <span asp-validation-for="Traccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioBase" class="control-label">Precio base</label>
                <input asp-for="PrecioBase" class="form-control" />
                <span asp-validation-for="PrecioBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgModelo" class="control-label">Link #1 de imagen de modelo</label>
                <input asp-for="ImgModelo" class="form-control" />
                <span asp-validation-for="ImgModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgModelo2" class="control-label">Link #2 de imagen de modelo</label>
                <input asp-for="ImgModelo2" class="form-control" />
                <span asp-validation-for="ImgModelo2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgModelo3" class="control-label">Link #3 de imagen de modelo</label>
                <input asp-for="ImgModelo3" class="form-control" />
                <span asp-validation-for="ImgModelo3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgModelo4" class="control-label">Link #4 de imagen de modelo</label>
                <input asp-for="ImgModelo4" class="form-control" />
                <span asp-validation-for="ImgModelo4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgModelo5" class="control-label">Link #5 de imagen de modelo</label>
                <input asp-for="ImgModelo5" class="form-control" />
                <span asp-validation-for="ImgModelo5" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgModelo6" class="control-label">Link #6 de imagen de modelo</label>
                <input asp-for="ImgModelo6" class="form-control" />
                <span asp-validation-for="ImgModelo6" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="💾 Guardar" class="btn btn-dark" style="font-size: 1.2rem; font-weight: 600;" />
            </div>
        </form>
    </div>
    <div class="btn-regresar">
        <a asp-action="listModelos" class="btn btn-warning" style="font-size: 1.2rem; font-weight: 600;">Regresar</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
