@model Dealer.Models.ServicioOficialCliente

@{
    ViewData["Title"] = "Eliminar";
}

<div class="admin-actions-container">
    <h1>Eliminar</h1>

    <h3 style="font-size:1rem;">¿Seguro que quiere eliminar?</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre/s y apellido/s
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCliente)
        </dd>
        <dt class = "col-sm-2">
            Cédula
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CedulaCliente)
        </dd>
        <dt class = "col-sm-2">
            Teléfono
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefonoCliente)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Regresar</a>
    </form>
</div>
