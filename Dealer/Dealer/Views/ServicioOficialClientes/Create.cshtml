@model Dealer.Models.ServicioOficialCliente

@{
    ViewData["Title"] = "Agregar cliente";
}

<h1 class="admin-header-title">@ViewData["Title"]</h1>

<hr />
<div class="row admin-actions-container">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="IdServicioOficial" class="control-label">Servicio oficial</label>*@
                <input asp-for="IdServicioOficial" class="form-control" type="hidden"/>
                @*<span asp-validation-for="IdServicioOficial" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="NombreCliente" class="control-label">Nombre/s y apellido/s</label>
                <input asp-for="NombreCliente" class="form-control" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CedulaCliente" class="control-label">Cédula</label>
                <input asp-for="CedulaCliente" class="form-control" />
                <span asp-validation-for="CedulaCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoCliente" class="control-label">Teléfono</label>
                <input asp-for="TelefonoCliente" class="form-control" />
                <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="💾 Guardar" class="btn btn-dark" style="font-size: 1.2rem; font-weight: 600;" />
            </div>
        </form>
    </div>
    <div class="btn-regresar">
        <a asp-action="Index" class="btn btn-warning" style="font-size: 1.2rem; font-weight: 600;">Regresar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
