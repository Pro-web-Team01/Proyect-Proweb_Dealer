@model Dealer.Models.ColorInterior

@{
    ViewData["Title"] = "Editar color interior";
}

<h1 class="admin-header-title">@ViewData["Title"]</h1>

<hr />
<div class="row admin-actions-container">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdColorInterior" />
            <div class="form-group">
                <label asp-for="ColorInterior1" class="control-label">Color</label>
                <input asp-for="ColorInterior1" class="form-control" />
                <span asp-validation-for="ColorInterior1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioColorInterior" class="control-label">Precio</label>
                <input asp-for="PrecioColorInterior" class="form-control" />
                <span asp-validation-for="PrecioColorInterior" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <input type="submit" value="💾 Guardar" class="btn btn-dark" style="font-size: 1.2rem; font-weight: 600;" />
            </div>
        </form>
    </div>
    <div class="btn-regresar">
        <a asp-action="Index" class="btn btn-warning" style="font-size: 1.2rem; font-weight: 600; ">Regresar</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
