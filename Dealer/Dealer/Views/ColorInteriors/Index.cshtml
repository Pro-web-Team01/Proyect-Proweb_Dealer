@model IEnumerable<Dealer.Models.ColorInterior>

@{
    ViewData["Title"] = "Admin. Color interior";
}
<div class="admin-actions-container">

 <a asp-action="Create" class="btn btn-danger rounded-pill" style="display:flex;justify-content:center; width:20rem; gap: 3px; font-family:Montserrat; font-weight:600; font-size: 1.3rem; margin: 2rem 0;">

        <lord-icon src="https://cdn.lordicon.com/ynwbvguu.json"
                   trigger="hover"
                   colors="primary:#ffffff"
                   style="width:25px;height:25px;">
        </lord-icon>
        Agregar nuevo color
    </a>

<table class="table">
    <thead>
        <tr>
            <th>
                Color
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ColorInterior1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioColorInterior)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.IdColorInterior" title="Editar" style="color:#263238;"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdColorInterior" title="Eliminar" style="color:#263238;">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                        </td>
        </tr>
}
    </tbody>
</table>
</div>