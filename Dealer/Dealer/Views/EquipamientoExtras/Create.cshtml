@model Dealer.Models.EquipamientoExtra

@{
    ViewData["Title"] = "Agregar equipamiento extra";
}

<h1 class="admin-header-title">@ViewData["Title"]</h1>
<hr />
<div class="row admin-actions-container">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdModelo" class="control-label">Modelo a que aplica</label>
                <select asp-for="IdModelo" class ="form-control" asp-items="ViewBag.IdModelo"><option></option></select>
            </div>
            <div class="form-group">
                <label asp-for="NombreEquipamientoExtra" class="control-label">Nombre equipamiento</label>
                <input asp-for="NombreEquipamientoExtra" class="form-control" />
                <span asp-validation-for="NombreEquipamientoExtra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio</label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Img" class="control-label">Link de imagen</label>
                <input asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="💾 Guardar" class="btn btn-dark" style="font-size: 1.2rem; font-weight: 600;" />
            </div>
        </form>
    </div>
    <div class="btn-regresar">
        <a asp-action="Index" class="btn btn-warning" style="font-size: 1.2rem; font-weight: 600;">Regresar</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
